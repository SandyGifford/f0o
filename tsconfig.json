{
	"compilerOptions": {
		"target": "ES2017",
		"noUnusedLocals": true,
		"noImplicitAny": false,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"esModuleInterop": true,
		"alwaysStrict": true,
		"jsx": "react",
		"sourceMap": true,
		"experimentalDecorators": true,
		"moduleResolution": "node",
		"allowJs": true,
		"typeRoots": [ "./node_modules/@types" ],
	},
	"exclude": [ "dist", "*.js", ]
}